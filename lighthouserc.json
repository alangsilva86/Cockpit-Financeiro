{
  "ci": {
    "collect": {
      "startServerCommand": "npm run build && npm run preview -- --host 0.0.0.0 --port 4173",
      "url": [
        "http://127.0.0.1:4173/"
      ],
      "numberOfRuns": 1,
      "settings": {
        "emulatedFormFactor": "mobile",
        "throttlingMethod": "simulate",
        "onlyAudits": [
          "tap-targets"
        ]
      }
    },
    "assert": {
      "assertions": {
        "tap-targets": [
          "error",
          {
            "minScore": 1
          }
        ]
      }
    }
  }
}
